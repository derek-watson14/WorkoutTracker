<div class="modal fade" id="addWorkoutModal" tabindex="-1" role="dialog" aria-labelledby="addWorkoutLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addWorkoutLabel">Add workout</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addWorkoutForm">
          <div class="form-group">
            <div id="noWorkoutNameAlert" class="alert alert-danger mb-1 d-none" role="alert">
              Please provide a workout name
            </div>
            <label for="workoutName" class="col-form-label">Workout name:</label>
            <input type="text" class="form-control" id="workoutName" maxlength="25">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" form="addWorkoutForm" class="btn btn-primary">Add Workout</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>